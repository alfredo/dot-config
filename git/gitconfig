[user]
    name = Alfredo Aguirre
[alias]
    slog = log --pretty=format:'%C(bold)%C(yellow)%h%Creset%C(222)%d%Creset %s %C(bold)%C(black)(%cr by %an)'
    glog = log --graph --all --pretty=format:'%C(bold)%C(yellow)%h%Creset%C(222)%d%Creset %s %C(bold)%C(black)(%cr by %an)'
     open = "!echo $(git remote get-url origin | sed 's#git@\\([^:]*\\):#https://\\1/#; s#\\.git$##')/tree/$(git rev-parse --abbrev-ref HEAD)"
    publish = push -u origin HEAD
    sync = !git fetch -p && git pull --rebase
    gone = "!f() { git branch -D \"$1\" && git push origin --delete \"$1\" && echo \"Branch '$1' deleted locally and remotely\"; }; f"  # Remove branch localy and remotely
[push]
    default = upstream
[pull]
    rebase = true      # Always rebase on pull
[fetch]
    prune = true       # Always prune on fetch
[core]
    editor = vim
    PreloadIndex = true
    excludesfile = ~/.config/git/ignore_global
    ignoreCase = false
[rerere]
    enabled = true
[magit]
    hideCampaign = true
[color]
    ui = auto
[rebase]
    autoStash = true
[gpg]
    program = gpg
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[init]
    defaultBranch = main
[url "https://github.com/"]
    insteadOf = git://github.com/